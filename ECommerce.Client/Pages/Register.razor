@page "/register"
<div class="login-container">
    <header class="login-header">
        <h1 class="login-header-title">Register</h1>
    </header>
    <form
        class="login-form"
        method="post"
        @onsubmit="SubmitRegisterUser">
        <InputText
            class="login-form-input"
            placeholder="E-Mail"
            @bind-Value="Model.Email"/>
        <InputText
            class="login-form-input"
            placeholder="Username"
            @bind-Value="Model.Username"/>
        <InputText
            class="login-form-input"
            placeholder="Password"
            type="password"
            @bind-Value="Model.Password"/>
        <InputText
            class="login-form-input"
            placeholder="Re-type Password"
            type="password"
            @bind-Value="Model.PasswordCheck"/>
        <button class="login-form-button">Register</button>
    </form>
    <span class="redirect-to-create-account">Already have an account? <br> Click here to login</span>
</div>

